.prev-link
    margin-top 15px
    margin-right auto
    font-weight bold
    font-size 1.1em
    transition-property transform
    transition-timing-function ease-out
    transition-duration 0.3s
    a
        border none
        color #17141f
        &:hover
            transform translateX(-5px)
            background-color #fff
            color #9966FF
            -webkit-transition all .2s
            -moz-transition all .2s
            -ms-transition all .2s
            -o-transition all .2s
            transition all .2s

.next-link
    margin-top 15px
    margin-left auto
    font-weight bold
    font-size 1.1em
    transition-property transform
    transition-timing-function ease-out
    transition-duration 0.3s
    a
        border none
        color #17141f
        &:hover
            transform translateX(5px)
            background-color #fff
            color #9966FF
            -webkit-transition all .2s
            -moz-transition all .2s
            -ms-transition all .2s
            -o-transition all .2s
            transition all .2s
