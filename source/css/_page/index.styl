.profile
    margin-top 30vh
    text-align center
    height 70vh

    .profile-title
        margin 25px 0 25px 0
        text-align center

    .profile-hitokoto
        text-align center

    .iconfont
        font-size 36px

    .logo-group
        text-align center
        margin-top 30px
        a
            margin 0 5px 0 5px
            color #17141f
            &:hover
                color #9966FF
                background-color transparent
                text-decoration none
                cursor pointer
                -webkit-transition all .3s
                -moz-transition all .3s
                -ms-transition all .3s
                -o-transition all .3s
                transition all .3s


.profile-posts
    a
        color #17141f
        &:hover
            color #9966FF
            background-color transparent
            text-decoration none
            cursor pointer
            -webkit-transition all .3s
            -moz-transition all .3s
            -ms-transition all .3s
            -o-transition all .3s
            transition all .3s
    .profile-post
        margin 60px 0 60px 0
        .profile-post-title
            margin 20px 0
        .profile-date
            font-size 16px
        .profile-more
            float right
            font-size 20px
            transition-property transform
            transition-timing-function ease-out
            transition-duration 0.3s
            &:hover
                transform translateX(5px)
    .profile-more-button
        margin 0 auto 0 auto
        display block
        font-size 1.1em
        font-weight bold
        a
            border none
            color #17141f
            transition-property transform
            transition-timing-function ease-out
            transition-duration 0.2s
            &:hover
                transform scale(1.1, 1.1)
                background-color #fff
                color #9966FF
                -webkit-transition all .2s
                -moz-transition all .2s
                -ms-transition all .2s
                -o-transition all .2s
                transition all .2s
        .page-link
            padding 0.75em 2.25em
