.archive
    margin-top 70px
    .archive-title
        text-align center
        margin-bottom 10px
    .archive-subtitle
        font-size 15px
        text-align center
        margin-bottom 40px
        .archive-icon
            font-size 15px


    .archive-date
        margin-top 30px
        text-align center

    .archive-post
        margin 5px 0 5px 0
        padding 5px 0 5px 0
        border-bottom 1px dashed lightgray

    .archive-post-link
        font-size 16px
        color #17141f
        &:hover
            color #9966FF
            text-decoration none
            background-color transparent
            -webkit-transition all .2s
            -moz-transition all .2s
            -ms-transition all .2s
            -o-transition all .2s
            transition all .2s

    .archive-post-title
        font-size 15px

    .archive-post-date
        font-size 15px
        float right